<!DOCTYPE html>
<html>
<head>
    <title>Monster Detail</title>
</head>
<body>
    <h3>Monster Detail</h3>
    <div>Select Monster:</div>
    <div>
        <select id="monster-list" onchange="displayMonsterDetail(this.value)"></select>
    </div>
    <hr/>
    <div>
        <table>
            <tr>
                <th>ID</th>
                <td id="td-monster-id"></td>
            </tr>
            <tr>
                <th>Name</th>
                <td id="td-monster-name"></td>
            </tr>
            <tr>
                <th>HP</th>
                <td id="td-monster-hp"></td>
            </tr>
            <tr>
                <th>EXP</th>
                <td id="td-monster-exp"></td>
            </tr>
        </table>
    </div>
    <script>
        // Monster list as array of JSON objects
        const monsters = [
            { "id": 1, "name": "Fire Dragon", "hp": 150, "exp": 85 },
            { "id": 2, "name": "Ice Wolf", "hp": 75, "exp": 45 },
            { "id": 3, "name": "Shadow Goblin", "hp": 40, "exp": 25 },
            { "id": 4, "name": "Lightning Phoenix", "hp": 200, "exp": 120 },
            { "id": 5, "name": "Earth Golem", "hp": 180, "exp": 95 },
            { "id": 6, "name": "Poison Spider", "hp": 60, "exp": 35 },
            { "id": 7, "name": "Wind Eagle", "hp": 90, "exp": 55 },
            { "id": 8, "name": "Dark Skeleton", "hp": 65, "exp": 40 },
            { "id": 9, "name": "Crystal Unicorn", "hp": 120, "exp": 75 },
            { "id": 10, "name": "Lava Titan", "hp": 250, "exp": 150 }
        ];

        // Your script goes here...

   
        function populateMonsterDropdown() {
            const selectElement = document.getElementById('monster-list');

            const appendOption = (value, text) => {
                const option = document.createElement('option');
                option.value = value; 
                option.text = text; // Use innerText for option text
                selectElement.appendChild(option);
            };

            appendOption('-', '-');

            monsters.forEach(monster => {
                appendOption(monster.name, monster.name);
            });
        }


        function displayMonsterDetail(selectedName) {
            const idCell = document.getElementById('td-monster-id');
            const nameCell = document.getElementById('td-monster-name');
            const hpCell = document.getElementById('td-monster-hp');
            const expCell = document.getElementById('td-monster-exp');

            const clearCells = () => {
                idCell.innerText = '';
                nameCell.innerText = '';
                hpCell.innerText = '';
                expCell.innerText = '';
            };

            if (selectedName === '-') {
                clearCells();
                return; 
            }


            let selectedMonster = null;
            for (let i = 0; i < monsters.length; i++) {
                if (monsters[i].name === selectedName) {
                    selectedMonster = monsters[i];
                    break; 
                }
            }


            if (selectedMonster) {
                idCell.innerText = selectedMonster.id;
                nameCell.innerText = selectedMonster.name;
                hpCell.innerText = selectedMonster.hp;
                expCell.innerText = selectedMonster.exp;
            } 
        }


        populateMonsterDropdown();
    </script>
</body>
</html>
